<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lobi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/lobi_notification_list_item_container"
        android:paddingBottom="@dimen/lobi_margin_section"
        android:paddingLeft="@dimen/lobi_padding_high"
        android:paddingRight="@dimen/lobi_padding_high"
        android:paddingTop="@dimen/lobi_margin_section" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <com.kayac.libnakamap.components.ImageLoaderView
                    android:id="@+id/lobi_notification_list_item_user_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    lobi:lobi_baseHeight="@dimen/lobi_chat_gallery_thumb_height"
                    lobi:lobi_baseWidth="@dimen/lobi_chat_gallery_thumb_width"
                    lobi:lobi_useMemoryCache="false" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/lobi_padding_middle" >

                    <TextView
                        android:id="@+id/lobi_notification_list_item_title"
                        style="@style/lobi_textview_black_very_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="title" />

                    <TextView
                        android:id="@+id/lobi_notification_list_item_date"
                        style="@style/lobi_textview_black_very_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="title" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/lobi_notification_list_item_activity"
                style="@style/lobi_textview_black_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/lobi_padding_middle"
                android:text="" />

            <TextView
                android:id="@+id/lobi_notification_list_item_message"
                style="@style/lobi_textview_black_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <com.kayac.libnakamap.components.ImageLoaderView
            android:id="@+id/lobi_notification_list_item_icon"
            android:layout_width="@dimen/lobi_icon_small"
            android:layout_height="@dimen/lobi_icon_small"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            lobi:lobi_useMemoryCache="false" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lobi_pearl_gray" >
    </FrameLayout>

</LinearLayout>
 