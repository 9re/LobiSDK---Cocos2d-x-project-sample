<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lobi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lobi_group_list_row_height"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/lobi_padding_middle"
    android:paddingLeft="@dimen/lobi_padding_high"
    android:paddingRight="@dimen/lobi_padding_high"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lobi_base_list"
        android:orientation="horizontal" >

        <com.kayac.libnakamap.components.FramedImageLoader
            android:id="@+id/lobi_profile_public_groups_list_icon"
            android:layout_width="@dimen/lobi_group_list_row_icon_width"
            android:layout_height="@dimen/lobi_group_list_row_icon_height"
            lobi:lobi_frameResourceId="@drawable/lobi_frame_list"
            android:paddingTop="@dimen/lobi_padding_low"
            android:paddingBottom="@dimen/lobi_padding_low"
            android:paddingLeft="@dimen/lobi_padding_low" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/lobi_padding_high"
            android:paddingRight="@dimen/lobi_padding_middle"
            >

            <TextView
                android:id="@+id/lobi_profile_public_groups_list_title"
                style="@style/lobi_textview_black_default_singleline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lobi_profile_public_groups_list_description"
                style="@style/lobi_textview_gray_small_singleline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lobi_icn_user_s" />

                <TextView
                    android:id="@+id/lobi_profile_public_groups_list_number"
                    style="@style/lobi_textview_gray_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lobi_margin_low"
                    android:gravity="center_vertical" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lobi_margin_middle"
                    android:src="@drawable/lobi_icn_time_s" />

                <TextView
                    android:id="@+id/lobi_profile_public_groups_list_time"
                    style="@style/lobi_textview_gray_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lobi_margin_low"
                    android:gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/lobi_profile_public_groups_list_leader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/lobi_margin_middle"
            android:src="@drawable/lobi_icn_group_leader" />
            
   </LinearLayout>

</LinearLayout> 